	cout << ((double) rand() / RAND_MAX) << endl;
	cout << ((double) rand() / RAND_MAX) << endl;
	cout << ((double) rand() / RAND_MAX) << endl;
	cout << ((double) rand() / RAND_MAX) << endl;
	cout << ((double) rand() / RAND_MAX) << endl;
	
	// (double) - rzutowanie typu, inaczej konwersja typu na double
	cout << (double) 5/2 << endl; // nie ma dzielenia całkowitego (double/int)

  cout << rand() / RAND_MAX << endl;
  cout << rand() / RAND_MAX << endl;
  cout << rand() / RAND_MAX << endl;
  cout << rand() / RAND_MAX << endl;
  cout << rand() / RAND_MAX << endl;
 
