#include <iostream>
#include <cmath> 
using namespace std;

main(){
	
    // zmienne
    
    float r, R, pole, obwod;

    // komunikaty i dane od uzytkownika
    
    cout << "Podaj male r: " << endl;
    cin >> r;
    cout << "Podaj duze R: " << endl;
    cin >> R;
    
    // obliczenia 
    
    pole = M_PI*((pow(R,2))-(pow(r,2)));
    obwod = 2*M_PI*(R+r);
    
    // wyswietlenie odpowiedzi
    
   cout << "Pierscien o r: " << r << " i R: " << R << " ma pole: " << pole << ", oraz obwod: "<< obwod << "." << endl;
	      
    system("pause");
    
}
