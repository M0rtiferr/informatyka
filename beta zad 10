#include <iostream>
using namespace std;

 

main(){ 
     // instrukcje iteracyjne
     
     // pętla for( I ; II ; III ){ blok iteracji }
     
     // i - jest zmienną iterowaną - zmienna ta w trakcie dziłania pętli jest modyfikowana.
     //     W tym przypadku rośnie o 1  (i=i+1) - III parametr
    //     Na początku zmienna i ma wartość 0   (int i=0) - I parametr 
    // Jak długo ma dziłać pętla?  odp. to II parametr (gdy i<10 )
    // Gdy i będzie mniejsze od 10, to wykona się iteracja {blok instrukcji}.
    
  
  
  	for (int i=0; i<1; i=i+1) { // <=> i++ <=> i+=1 //
  		cout << i << ", ";
	  }
	
	    // zrobić pętlę, która wyświetli takie wartości:    
    //  a) 5, 6, 7, 8,
   
    //  b) 0, 2, 4, 6, 8,  (parzyste)
   
     //  c) 1, 3, 5, 7, 9, 11 (nieparzyste)
   
     //  d) -10,-5, 0, 5, 10 (zmiana o 5)
    
     //  e) -9, -6, -3, 0,
    
     //  f) 9,8,7,6,5,4,3,2,1
    
     //  g) 9,6,3,0
    
     //  h) 8,6,4,2,0   
     
     for ( int i=5; i<=9; i=i+1 ){
     	cout << i << ", ";	
		 }
	cout << endl;	 
	
	for ( int i=0; i<=9; i=i+2 ){
     	cout << i << ", ";	
		 }
	 cout << endl;
	 
	for ( int i=1; i<=11; i=i+2 ){
     	cout << i << ", ";	
		 }
	cout << endl;
	
	for ( int i=-10; i<=10; i=i+5 ){
     	cout << i << ", ";	
		 }
	cout << endl;
	
	for ( int i=-9; i<=0; i=i+3 ){
     	cout << i << ", ";	
		 }
		cout << endl;
		
		
	for ( int i=9; i>=1; i=i-1 ){
     	cout << i << ", ";	
		 }
		cout << endl;
		
	for ( int i=9; i>0; i=i-3 ){
     	cout << i << ", ";	
		 }
		cout << endl;
		//  h) 8,6,4,2,0   
	for ( int i=8; i>=0; i=i-2 ){
     	cout << i << ", ";	
		 }
		cout << endl;
		
    system("pause");
}
