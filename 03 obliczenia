// 1/4 = 0
// 1.0/4 = 0.25
cout << pow (16, 1.0/4) << endl;

cout << round(1.5) << endl;
cout << round(1.4) << endl;



cout <<  round(1.25555) << endl;
//do 2 po przecinku
