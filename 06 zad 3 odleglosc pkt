 #include <iostream>
 #include <cmath>
 
 using namespace std;
 
 main(){
 
 float x1, y1, x2, y2, d;
 
 cout << "Podaj x1: ";
 cin >> x1;
 cout << "Podaj y1: ";
 cin >> y1;
 
 cout << "Podaj x2: "; 
 cin >> x2;
 cout << "Podaj y2: ";
 cin >> y2;
 
 d = sqrt( pow(x2-x1, 2) + pow( y2-y1, 2));
 
 cout << "Odleglosc pkt. A(" << x1 << "," << y1 << ") oraz punktu B(" << x2 << "," << y2 << ") to " << d << "." << endl;     
 
 system("pause");
 }
